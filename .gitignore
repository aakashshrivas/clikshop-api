# Laravel bootstrap cache (keep config.php, routes.php if auto-generated)
bootstrap/cache/*
!bootstrap/cache/.gitignore

# Composer & Vendor
/vendor

# Node modules
/node_modules

# Ignore everything in storage by default
/storage/*

# Except the public folder contents (all seed folders)
!/storage/app/public
!/storage/app/public/**/*

# Keep ignoring dynamic/framework/logs
!/storage/framework/cache/data
!/storage/framework/sessions
!/storage/framework/testing
!/storage/framework/views
!/storage/logs
!/storage/*.gitignore

# Public uploads & build
/public/storage
/public/hot
/public/build
/public/upload

# Environment & config
.env
.env.*
!.env.example
.env.backup
/storage/*.key

# PHPUnit
.phpunit.result.cache

# IDE & dev files
/.idea
/.vscode
/.history

# Logs
npm-debug.log
yarn-error.log

# Homestead / Vagrant
Homestead.json
Homestead.yaml

# Misc
auth.json
installation.json
stubs
/storage/dotenv-editor
